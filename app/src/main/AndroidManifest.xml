<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Ajout de la permission INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyPortal"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EasyPortal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ajout des nouvelles activités -->
        <activity android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.EasyPortal"/>

        <activity android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.EasyPortal"/>

        <activity android:name=".SuccessActivity"
            android:exported="true"
            android:theme="@style/Theme.EasyPortal"/>

        <!-- Ajout des activités du tableau de bord -->
        <activity android:name=".AdminDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.EasyPortal"/>

        <activity android:name=".UserDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.EasyPortal"/>
    </application>

</manifest>
